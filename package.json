{
  "name": "ts-react-boilerplate",
  "version": "1.0.0",
  "description": "My boilerplate for React project with TypeScript",
  "author": "Duc Nguyen <duc.ngtuan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --progress --hide-modules --display-optimization-bailout",
    "lint": "tslint --type-check --project tsconfig.json",
    "start": "webpack-dev-server",
    "test": "jest --no-cache",
    "test:watch": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.(css|less|scss|styl|stylus)$": "jest-css-modules",
      "^.+\\.tsx?$": "typescript-babel-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.26",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.0",
    "@types/react-test-renderer": "^15.4.5",
    "autoprefixer": "^7.1.3",
    "awesome-typescript-loader": "^3.1.2",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "compression-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "jest-css-modules": "^1.1.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "optimize-css-assets-webpack-plugin": "^3.1.1",
    "postcss": "^6.0.10",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "tslint": "^5.1.0",
    "tslint-config-prettier": "^1.4.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.0.0",
    "typescript": "^2.5.2",
    "typescript-babel-jest": "^1.0.3",
    "url-loader": "^0.5.8",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.4.4"
  }
}
