{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "jsRules": {
    "max-line-length": [
      true,
      80
    ]
  },
  "rules": {
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "linebreak-style": [
      true,
      "LF"
    ],
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      80
    ],
    "member-ordering": [
      true,
      "static-before-instance",
      "variables-before-functions"
    ],
    "no-unused-variable": {
      "options": [
        true
      ],
      "severity": "warning"
    },
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  }
}